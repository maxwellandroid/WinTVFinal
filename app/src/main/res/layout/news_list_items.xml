<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/news_card_view"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="#fff"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingLeft="100dp"
                android:paddingTop="1pt"
                android:paddingBottom="1pt"
                android:background="@drawable/boder"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="match_parent"
                    android:text="       Loading...."
                    android:id="@+id/news_title"
                    android:layout_weight="1"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:paddingLeft="1pt"
                    android:paddingRight="2pt"
                    android:gravity="center|start"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_height="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:text=""
                        android:id="@+id/news_time"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:textSize="@dimen/text"
                        android:paddingLeft="2pt"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text=""
                        android:id="@+id/news_section"
                        android:paddingRight="4pt"
                        android:layout_weight="1"
                        android:gravity="center|end"
                        android:textSize="@dimen/text"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="match_parent"
                        android:text=""
                        android:id="@+id/news_full"
                        android:paddingRight="4pt"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:gravity="center|end"
                        android:textSize="@dimen/text"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/news_id"/>

                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="100dp"
                android:scaleType="fitXY"
                android:padding="1pt"
                android:id="@+id/news_image"
                android:layout_height="match_parent"
                android:src="@drawable/load"/>
        </FrameLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>